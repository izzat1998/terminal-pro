# Vue Frontend Configuration
# Copy this file to .env and fill in your values

# ==================== API Configuration ====================
# Point to your backend API
# Development: http://localhost:8008/api
# Docker: http://backend:8000/api (internal) or http://localhost:8008/api (browser)
# Production: https://api.your-domain.com/api

VITE_API_BASE_URL=http://localhost:8008/api

# ==================== Gate Camera Configuration ====================
# RTSP stream URLs for gate cameras
# Format: rtsp://[username:password@]host:port/stream
# Leave empty or set VITE_USE_MOCK_DETECTION=true for development without cameras

VITE_ENTRY_CAMERA_URL=
VITE_EXIT_CAMERA_URL=

# Set to true to use mock detection (simulated vehicles) instead of real camera feeds
VITE_USE_MOCK_DETECTION=true
